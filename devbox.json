{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.5/.schema/devbox.schema.json",
  "packages": [
    "curl@latest",
    "git@latest",
    "gnupg@latest",
    "pwgen@latest",
    "whois@latest",
    "xorriso@latest"
  ],
  "shell": {
    "init_hook": [],
    "scripts": {
      "build": [
        "cat ${HOME}/.ssh/id_ed25519.pub > configs/authorized_keys",
        "./build.sh -u 'janitor' -d 'example.org' -z",
        "cat *.sum"
      ]
    }
  }
}
